{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist",
          "installCommand": "npm install --legacy-peer-deps"
        }
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/assets/(.*)", "dest": "/assets/$1" },
      { "src": "/(.*)\\.js", "dest": "/$1.js" },
      { "src": "/(.*)\\.css", "dest": "/$1.css" },
      { "src": "/(.*)\\.(png|jpg|jpeg|gif|svg|ico|webp)", "dest": "/$1.$2" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }